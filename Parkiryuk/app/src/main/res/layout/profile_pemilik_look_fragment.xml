<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_gravity="center"
            android:gravity=""
            android:orientation="vertical"
            android:paddingBottom="45dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/pic_profile_pemilik"
                />
            <TextView
                android:id="@+id/tempat_parkir_nama"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NAMA TEMPAT PARKIR"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#415363"
                android:textAlignment="center" />
            <TextView
                android:id="@+id/tempat_parkir_alamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jl. XXXXXXXXXXXXXXXXXXXXXXX"
                android:textAlignment="center"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/tempat_parkir_jam_buka"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="XX.XX - XX.XX"
                android:textAlignment="center"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/pemilik_hp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="XXXXXXXXXXXXX"
                android:textAlignment="center"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/pemilik_slot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="XXXXXXXXXXXXX"
                android:textAlignment="center"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="#414351"/>
            <TextView
                android:id="@+id/pemilik_harga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="XXXXXXXXXXXXX"
                android:textAlignment="center"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="#414351"/>

            <Button
                android:id="@+id/pemilik_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/primary_btn_bg"
                android:text="Keluar"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
