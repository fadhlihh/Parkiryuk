<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="5dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/blue_car_drawable"
            android:layout_weight=".20"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:layout_weight=".60"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_nama_pemesan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#415363"/>
            <TextView
                android:id="@+id/tv_id_parkir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#415363"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/tv_status_sampai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#FF4D4D"
                />
            <TextView
                android:id="@+id/tv_durasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#414351"/>
            <TextView
                android:id="@+id/tv_harga_parkir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#414351"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/ib_sampai_selesai"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/btn_sampai" />
    </LinearLayout>
</android.support.v7.widget.CardView>
