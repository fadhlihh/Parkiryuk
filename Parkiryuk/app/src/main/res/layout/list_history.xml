<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_tanggal_parkir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XX"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/tv_bulan_parkir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXX"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">
            <TextView
                android:id="@+id/tv_tempat_parkir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bandung Electronic Center"/>
            <TextView
                android:id="@+id/tv_id_parkir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="IDPARKIR"/>
            <TextView
                android:id="@+id/tv_durasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="xx.xx.xx"/>
            <TextView
                android:id="@+id/tv_harga_parkir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rp xxxxxxx"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
