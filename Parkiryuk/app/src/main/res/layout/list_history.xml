<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_tanggal_parkir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XX"
                android:textSize="40dp"
                android:textStyle="bold"
                android:textColor="#415363"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/tv_bulan_parkir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXX"
                android:textSize="40dp"
                android:textStyle="bold"
                android:textColor="#415363"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">
            <TextView
                android:id="@+id/tv_tempat_parkir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bandung Electronic Center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#415363"/>
            <TextView
                android:id="@+id/tv_id_parkir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="IDPARKIR"
                android:textSize="15dp"
                android:textColor="#415363"/>
            <TextView
                android:id="@+id/tv_durasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="xx.xx.xx"
                android:textSize="20dp"
                android:textColor="#414351"/>
            <TextView
                android:id="@+id/tv_harga_parkir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rp xxxxxxx"
                android:textSize="20dp"
                android:textColor="#414351"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
